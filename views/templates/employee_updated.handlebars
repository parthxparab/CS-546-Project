<head>
      <link rel="stylesheet" href="/assets/semantic/semantic.min.css"/>
		  <script src="/assets/semantic/semantic.min.js"></script>
</head>
<body>

<div id="main">
      <h1 class="headerTag">{{searchDetail.firstName}} {{searchDetail.lastName}} Details</h1>
      <p>This page is for updating the content of the employee </p>
                   
   <form id="updatemanagerdetailsform" action="/employee/updated" method="POST" class="ui form">
    <div class="field">
        <label for="FirstName">Employee FirstName:</label>
        <input type= "text" id="UsernameEmp" name="FirstNameEmp" placeholder="{{searchDetail.firstName}}" class="text" />
    </div>
    <div class="field">
        <label for="LastName">Employee LastName:</label>
        <input type= "text" id="UsernameEmp" name="LastNameEmp" placeholder="{{searchDetail.lastName}}" class="text" />
    </div>
    <div class="field">
        <label for="Email">Employee Email </label>
        <input type= "text" id="Startdate" name="EmailEmp" placeholder="{{searchDetail.email}}" class="text" />
    </div>
    <div class="field">
        <label for="Budget">Employee Hours </label>
        <input type= "Number" id="Enddate" name="HoursEmp" placeholder="{{searchDetail.total_hours}}" class="text" />
    </div>
      <div class="field">
        <label for="Budget">Employee Total Salary</label>
        <input type= "Number" id="Enddate" name="TotalSalaryEmp" placeholder="{{searchDetail.total_salary}}" class="text" />
    </div>
      <div class="field">
        <label for="Budget">Employee Basic Salary </label>
        <input type= "Number" id="Enddate" name="BasicSalaryEmp" placeholder="{{searchDetail.basic_salary}}" class="text" />
    </div>
      <div  class="field">
        <label for="Budget">Employee Job Title </label>
        <input type= "text" id="Enddate" name="JobEmp" placeholder="{{searchDetail.job_title}}" class="text" />
    </div>
    <input id="{{idreq}}" name="updateMan" value="{{idreq}}" type="text" style="width:50px; font-size: xx-small; visibility:hidden ">
    <div class="ui one column stackable center aligned page grid">
    <div class="column twelve wide">
        <button id="hours_button" type="submit" class="ui button" onclick="myfunction()">Submit</button>
        <p id='demo'></p>
         </div>
         </div>
    </form>
  
         
               
                
                
    <script>
        function myfunction(){
          document.getElementById('demo').innerHTML='Successufully updated';
        }
    </script>
</body>